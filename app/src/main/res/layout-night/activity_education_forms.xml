<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="MissingDefaultResource">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education Department Forms"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Bursary Application Button -->
    <Button
        android:id="@+id/btn_bursary_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bursary Application"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <!-- School Enrollment Button -->
    <Button
        android:id="@+id/btn_school_enrollment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="School Enrollment"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white" />

</LinearLayout>
